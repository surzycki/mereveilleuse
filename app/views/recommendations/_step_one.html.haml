.row
  .col-sm-12
    %p= t('recommendation.form.title')

.row  
  .col-sm-6
    = form_for(@form, url: recommendations_path, method: :post) do |f|
      .form-group
        = f.label :practitioner_name, t('recommendation.form.practitioner_name.label')
        = f.text_field :practitioner_name, class: 'form-control', placeholder: t('recommendation.form.practitioner_name.placeholder') 
        = f.hidden_field :practitioner_id

      .form-group
        = f.label :profession, t('recommendation.form.profession.label')
        = f.collection_select(:profession, Profession.all, :id, :name, { include_blank: t('recommendation.form.profession.placeholder') }, class: 'form-control' )
           
      .form-group
        = f.label :patient_type, t('recommendation.form.patient_type.label')
        = f.collection_select(:patient_type, PatientType.all, :id, :name, { include_blank: t('recommendation.form.patient_type.placeholder') }, class: 'form-control' )
        
      .form-group
        = f.label :address, t('recommendation.form.address.label')
        = f.text_field :address, class: 'form-control', placeholder: t('recommendation.form.address.placeholder')

      = f.submit t('recommendation.form.submit') , class: 'btn btn-primary btn-block'

  .col-sm-6
    %h3= t('recommendation.information.title')
    %ul
      %li
        %p.bold= t('recommendation.information.reasons.one.title')
        %p= t('recommendation.information.reasons.one.content') 
      %li
        %p.bold= t('recommendation.information.reasons.two.title')
        %p= t('recommendation.information.reasons.two.content') 