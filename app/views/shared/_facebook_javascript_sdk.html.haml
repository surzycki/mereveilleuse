  window.fbAsyncInit = function() {
    FB.init({
      appId      : '#{ENV['FACEBOOK_APP_ID']}',
      xfbml      : false,
      cookie     : true,
      status     : true,
      version    : 'v2.2'
    });

    try {
      FB.Canvas.setAutoGrow(91);
      FB.Canvas.scrollTo(0,0);
    } catch(err) {
      console.log('Facebook calls only permitted on canvas')
    }
    
    FB.Event.subscribe('auth.authResponseChange', onAuthResponseChange);
    FB.Event.subscribe('auth.statusChange', onStatusChange);

    function login(callback) {
      FB.login(callback, { scope: 'user_friends, email, user_location'} );
    }

    function loginCallback(response) {
      if(response.status != 'connected') {
        console.log('loginCallback: NOT CONNECTED');
        // goto app description page
        top.location.href = 'https://www.facebook.com/games/mereveilleuse/'
      }
    }

    function onStatusChange(response) {
      if( response.status != 'connected' ) {
        login(loginCallback);
      } else {
        
        console.log('onStatusChange: CONNECTED')
        // send login event
        try {
          FB.AppEvents.logEvent('Logged In')
        } catch (error) {
          console.log('FB.AppEvents only available for Canvas apps')
        }

        // reload now that we are authenticated
        if("#{@requesting_authentication}" == 'true') 
          top.location.href = "#{ENV['FACEBOOK_CANVAS']}"
      }
    }
    
    function onAuthResponseChange(response) {
      console.log('onAuthResponseChange', response.status);
    }
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));



  